{
  "manifest_version": 2,

  "name": "Search Again",
  "description": "Makes it easier to search for similar phrases again and again.",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "constants.js",
      "background.js"
    ],
    "persistent": false
  }
}
