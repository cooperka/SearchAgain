{
  "manifest_version": 2,

  "name": "Search Again",
  "description": "Makes it easier to search for similar phrases again and again.",
  "version": "0.1.0",

  "icons": {
    "16": "search-again@16w.png",
    "48": "search-again@48w.png",
    "128": "search-again@128w.png"
  },
  "browser_action": {
    "default_icon": "search-again@48w.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "constants.js",
      "background.js"
    ],
    "persistent": false
  }
}
